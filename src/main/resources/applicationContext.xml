		<property name="driverUrl" value="jdbc:mysql://admin.s30.javaidc.com:3309/javaidc_midolife?characterEncoding\=utf8" 
			/> <property name="user" value="midolife" /> <property name="password" value="y0hl7bdp" 
			/>

		<property name="driverUrl"
			value="jdbc:mysql://192.168.1.173:3306/mlife?characterEncoding\=utf8" />
		<property name="user" value="root" />
		<property name="password" value="root" />
